" source : https://github.com/alexandresalome/.home_shared

" System
set mouse=a
set nobackup
set noswapfile

" Keyboard
set backspace=indent,eol,start
"set iskeyword+=

" Visual
set cursorline
set scrolloff=8
set sidescrolloff=8
set showmatch
set number
set ruler
set showcmd
set nowrap
set guifont=Monospace\ 14

" Coding
set shiftround
set ignorecase
set smartcase
set tabstop=4
set shiftwidth=4
set expandtab
