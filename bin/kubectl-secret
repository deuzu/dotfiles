#!/bin/bash

#SECRET=$1
#PATH=$2

#if [ $# -eq 0 ]; then
#    echo "Jenkins sercret => $0 pic-jenkins .data.jenkins-admin-password"
#    echo "SFTP => $0 sftp-password .data.sftp-passowrd"

#else
#    printf $(/usr/local/bin/kubectl get secret --namespace smartcoach-int $SECRET -o jsonpath="{$PATH}" | /usr/bin/base64 --decode);echo
#fi

echo "Which secret do you wamt me to tell? :wink: :wink:"
echo "1) From args"
echo "2) Jenkins"
echo "3) SFTP"

read CHOICE
case "$CHOICE" in
    1) SECRET=$1
       PATH=$2
       ;;
    2) SECRET="pic-jenkins"
       PATH=".data.jenkins-admin-password"
       ;;
    3) SECRET="sftp-password"
       PATH=".data.sftp-passowrd"
       ;;
    *) echo "Invalid choice."
       exit
       ;;
esac

echo "$SECRET: "
printf $(/usr/local/bin/kubectl get secret --namespace smartcoach-int $SECRET -o jsonpath="{$PATH}" | /usr/bin/base64 --decode);echo
