[alias]
    st = status
    ci = commit
    cm = commit -m
    cme = commit --allow-empty -m
    amend = commit --amend
    erf = commit --amend --no-edit
    co = checkout
    cp = cherry-pick
    rb = rebase
    rbc = rebase --continue
    pur = pull --rebase
    pop  = stash pop
    lg = log --pretty=oneline --abbrev-commit --graph --decorate
    lc = !git oneline ORIG_HEAD.. --stat --no-merges
    undo = !git reset --soft HEAD^
[color]
    ui = true
[push]
    default = current
[core]
    autocrlf = input
    fileMode = false
    editor = vim
[remote "origin"]
    prune = true
